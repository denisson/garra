<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Size</th>
    <th>Content type</th>
    <th>Filename</th>
    <th>Width</th>
    <th>Height</th>
    <th>Parent</th>
    <th>Thumbnail</th>
    <th>Allowed</th>
    <th>Event</th>
    <th>User</th>
  </tr>

<% for picture in @pictures %>
  <tr>
    <td><%=h picture.size %></td>
    <td><%=h picture.content_type %></td>
    <td><%=h picture.filename %></td>
    <td><%=h picture.width %></td>
    <td><%=h picture.height %></td>
    <td><%=h picture.parent_id %></td>
    <td><%=h picture.thumbnail %></td>
    <td><%=h picture.allowed %></td>
    <td><%=h picture.event_id %></td>
    <td><%=h picture.user_id %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New picture', new_picture_path %>
